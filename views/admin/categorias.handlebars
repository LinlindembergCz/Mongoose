<h2> Lista de categorias</h2>

<hr> <a href="/admin/categorias/add"> <button class="btn btn-success">
    nova categoria
</button>
</a>
{{#each categorias}}
    <div class="card">

        <div class="card-body">
            <h4>
                <small>{{this.slug}}</small>               
            </h4>
             <a href="/admin/categorias/edit/{{this._id}}"> 
             <button class="btn btn-success mt-4">Editar</button>
             </a>


             <form action="/admin/categorias/deletar" method="POST"> 
             <input type="hidden" name="id" value="{{this._id}}">
             <button class="btn btn-danger mt-2">Deletar</button>
             </form>
        </div>
    </div>
{{else}}
     <h4 class="mt-3"> Nenhuma categoria registrada</h4>
{{/each}}
</hr>   
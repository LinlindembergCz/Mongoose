<div class="card">
    <div class="card-body">

<form  action="/admin/postagens/edit" method="Post">

 <input type="hidden" name="id" value="{{postagens._id}}">

  <label for="nome">titulo</label>
  <input type="text" id="titulo" name="titulo" placeholder="titulo da postagem" class="form-control" value="{{postagens.titulo}}">
  <br>
  <label for="slug">slug</label>
  <input type="text" id="slug" name="slug" placeholder="slug" class="form-control" value="{{postagens.slug}}">
  <br>
  <label for="slug">Descricao</label>
  <input type="text" id="descricao" name="descricao" placeholder="descricao" class="form-control" value="{{postagens.descricao}}">
  <br>    
  <textarea name="conteudo" class="form-control">{{postagens.conteudo}}</textarea>
  <br>
  
  <select name="categoria" class="custom-select">
      <option value="{{postagens.categoria._id}}" selected>{{postagens.categoria.nome}}</option>
      {{#each categorias }}
      <option value="{{this._id}}">{{nome}}</option>
      {{/each}}
  </select>

  <button type="submit" class="btn btn-success  mt-4">Salvar</button>
</form>

</div>

</div>
<h2> Lista de Postagens</h2>

<hr> <a href="/admin/postagens/add"> <button class="btn btn-success">
    nova postagem
</button>
</a>
{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h4>
               {{titulo}} {{categoria.nome}}
                <small>{{slug}}</small>               
            </h4>
             <a href="/admin/postagens/edit/{{_id}}"> 
                <button class="btn btn-success mt-4">Editar</button>
             </a>
             <form action="/admin/postagens/deletar" method="POST"> 
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">
                    Deletar
                </button>
             </form>
        </div>
    </div>
{{else}}
     <h4 class="mt-3"> Nenhuma postagem registrada</h4>
{{/each}}
</hr>   